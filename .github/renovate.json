{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
 
  "dependencyDashboard": false,
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchManagers": ["regex"],
     "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/nusrat-dops/renovate-repo"],
      "groupName": "ghcr-docker-images",
      "automerge": true
    }
  ],

  "regexManagers": [
    {
      "fileMatch": ["^deployment\\.yaml$"],
       "fileMatch": ["(^|/)manifests/.*\\.yaml$"],
      "matchStrings": [
        "image:\\s*ghcr\\.io/nusrat-dops/renovate-repo:(?<currentValue>[\\w\\.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "ghcr.io/nusrat-dops/renovate-repo"
    }
  ]
}
















