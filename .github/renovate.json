{
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Container Images (GHCR)",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "ghcr.io/{/,}**"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)manifests/.*\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>ghcr\\.io/nusrat-dops/renovate-repo):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
