{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "container"
      ],
      "groupName": "Container Images (GHCR)",
      "automerge": true,
      "automergeType": "pr",
      "matchPackageNames": [
        "ghcr.io/{/,}**"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)manifests/.*\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>ghcr\\.io/[^:]+):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "container"
    }
  ]
}
