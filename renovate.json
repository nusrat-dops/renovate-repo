{
  "extends": ["config:base"],
  "docker": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": ["(^|/)manifest\\.ya?ml$"],
      "matchStrings": [
        "image:\\s*(?<depName>[\\w\\-/\\.]+):(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{depName}}"
    }
  ]
}
