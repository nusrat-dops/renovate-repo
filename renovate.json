{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
 
  "dependencyDashboard": false,

  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
      "username": "nusrat-dops",
      "password": "${{ secrets.GITHUB_TOKEN}}"
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["ghcr.io/nusrat-dops/renovate-repo"],
      "groupName": "ghcr-docker-images",
      "automerge": false
    }
  ],

  "regexManagers": [
    {
      "fileMatch": ["^deployment\\.yaml$"],
      "matchStrings": [
        "image:\\s*ghcr\\.io/nusrat-dops/renovate-repo:(?<currentValue>[\\w\\.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "ghcr.io/nusrat-dops/renovate-repo"
    }
  ]
}













