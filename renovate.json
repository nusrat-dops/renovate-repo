{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "repositories": ["nusrat-dops/renovate-repo"],
  "dependencyDashboard": true,

  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "hostType": "docker",
 
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["ghcr.io/nusrat-dops/renovate-repo"],
      "groupName": "ghcr-docker-images",
      "automerge": true
    }
  ],

  "regexManagers": [
    {
      "fileMatch": ["^deployment\\.yaml$"],
      "matchStrings": [
        "image:\\s*ghcr\\.io/nusrat-dops/renovate-repo:(?<currentValue>[\\w\\.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "ghcr.io/nusrat-dops/renovate-repo"
    }
  ]
}



